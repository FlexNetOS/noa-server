# MCP Platform Environment Configuration
# Copy this file to .env and fill in your values

# ==========================================
# Server Configuration
# ==========================================
NODE_ENV=development
MCP_TRANSPORT=http
PORT=3000

# ==========================================
# Gateway Configuration
# ==========================================
GATEWAY_PORT=8080
GATEWAY_HOST=0.0.0.0

# API Keys (get from respective providers)
OPENROUTER_API_KEY=your_openrouter_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Gateway Features
GATEWAY_ENABLE_STREAMING=true
GATEWAY_ENABLE_WEBRTC=true
GATEWAY_ENABLE_RATE_LIMIT=true
GATEWAY_RATE_LIMIT_RPM=1000

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=postgresql://user:password@localhost:5432/mcp_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ==========================================
# NATS Configuration
# ==========================================
NATS_URL=nats://localhost:4222
NATS_TOKEN=
NATS_TLS_ENABLED=false

# JetStream
JETSTREAM_ENABLED=true
JETSTREAM_MAX_MEMORY=1Gi
JETSTREAM_MAX_FILE=10Gi

# ==========================================
# Observability
# ==========================================

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=mcp-server
OTEL_TRACES_SAMPLER=parentbased_traceidratio
OTEL_TRACES_SAMPLER_ARG=0.1

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# ==========================================
# Security
# ==========================================

# Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRY=24h

# SPIRE
SPIRE_ENABLED=false
SPIRE_TRUST_DOMAIN=example.com
SPIRE_SOCKET_PATH=/tmp/spire-agent/public/api.sock

# Vault
VAULT_ENABLED=false
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=
VAULT_NAMESPACE=

# ==========================================
# Feature Flags
# ==========================================
OPENFEATURE_PROVIDER=env
FEATURE_REALTIME_ENABLED=true
FEATURE_COST_TRACKING_ENABLED=true
FEATURE_TENANT_ISOLATION_ENABLED=true

# ==========================================
# Caching
# ==========================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=300
CACHE_MAX_SIZE=1Gi

# ==========================================
# Vector Database
# ==========================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ==========================================
# UI Configuration
# ==========================================
UI_PORT=5173
VITE_API_BASE_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080
VITE_ENABLE_DARK_MODE=true

# ==========================================
# TURN/WebRTC
# ==========================================
COTURN_REALM=localhost
COTURN_STATIC_AUTH_SECRET=
TURN_URLS=turn:localhost:3478

# ==========================================
# Email (for notifications)
# ==========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# ==========================================
# Backup Configuration
# ==========================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=

# ==========================================
# Development Tools
# ==========================================
HOT_RELOAD=true
SOURCE_MAPS=true
TYPESCRIPT_CHECK=true
