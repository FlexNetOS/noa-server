{
  "dashboard": {
    "title": "SLA/SLO Tracking Dashboard",
    "tags": ["sla", "slo", "availability", "reliability"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "1m",
    "panels": [
      {
        "title": "API Availability (SLA: 99.9%)",
        "type": "gauge",
        "gridPos": { "x": 0, "y": 0, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{service=\"api\",status!~\"5..\"}[30d])) / sum(rate(http_requests_total{service=\"api\"}[30d]))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 99,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 99, "color": "red" },
                { "value": 99.5, "color": "yellow" },
                { "value": 99.9, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "title": "P95 Latency SLO (Target: <2s)",
        "type": "gauge",
        "gridPos": { "x": 8, "y": 0, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=\"api\"}[5m])) by (le))",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "max": 5,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 2, "color": "yellow" },
                { "value": 3, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "title": "Error Budget Remaining",
        "type": "gauge",
        "gridPos": { "x": 16, "y": 0, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "((0.999 - (sum(rate(http_requests_total{service=\"api\",status!~\"5..\"}[30d])) / sum(rate(http_requests_total{service=\"api\"}[30d])))) / 0.001) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 20, "color": "yellow" },
                { "value": 50, "color": "green" }
              ]
            }
          }
        },
        "alert": {
          "name": "Error Budget Depleted",
          "conditions": [
            {
              "evaluator": { "params": [10], "type": "lt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "last" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "5m",
          "handler": 1,
          "message": "Error budget is below 10%",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "title": "30-Day Availability Trend",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{service=\"api\",status!~\"5..\"}[1d])) / sum(rate(http_requests_total{service=\"api\"}[1d]))) * 100",
            "legendFormat": "Daily Availability",
            "refId": "A"
          },
          {
            "expr": "99.9",
            "legendFormat": "SLA Target (99.9%)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Availability",
            "min": 99,
            "max": 100
          },
          { "format": "short" }
        ]
      },
      {
        "title": "Request Success Rate by Endpoint",
        "type": "graph",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{service=\"api\",status!~\"5..\"}[5m])) by (endpoint) / sum(rate(http_requests_total{service=\"api\"}[5m])) by (endpoint)) * 100",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "Success Rate",
            "min": 95,
            "max": 100
          },
          { "format": "short" }
        ]
      },
      {
        "title": "SLO Compliance Status",
        "type": "table",
        "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "(\n  sum(rate(http_requests_total{service=\"api\",status!~\"5..\"}[30d])) by (endpoint) /\n  sum(rate(http_requests_total{service=\"api\"}[30d])) by (endpoint)\n) * 100",
            "format": "table",
            "refId": "A",
            "legendFormat": "Availability"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=\"api\"}[30d])) by (le, endpoint))",
            "format": "table",
            "refId": "B",
            "legendFormat": "P95 Latency"
          },
          {
            "expr": "sum(rate(http_requests_total{service=\"api\",status=~\"5..\"}[30d])) by (endpoint) / sum(rate(http_requests_total{service=\"api\"}[30d])) by (endpoint) * 100",
            "format": "table",
            "refId": "C",
            "legendFormat": "Error Rate"
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": { "Time": true },
              "indexByName": {},
              "renameByName": {
                "endpoint": "Endpoint",
                "Value #A": "Availability %",
                "Value #B": "P95 Latency (s)",
                "Value #C": "Error Rate %"
              }
            }
          }
        ]
      },
      {
        "title": "Downtime Minutes (30 Days)",
        "type": "stat",
        "gridPos": { "x": 0, "y": 24, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "(1 - (sum(rate(http_requests_total{service=\"api\",status!~\"5..\"}[30d])) / sum(rate(http_requests_total{service=\"api\"}[30d])))) * 30 * 24 * 60",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "displayName": "Downtime Minutes",
            "unit": "m",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 43.2, "color": "yellow" },
                { "value": 86.4, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "title": "Budget Burn Rate",
        "type": "stat",
        "gridPos": { "x": 8, "y": 24, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{service=\"api\",status=~\"5..\"}[1h])) / sum(rate(http_requests_total{service=\"api\"}[1h]))) / 0.001",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "displayName": "Burn Rate (1h)",
            "decimals": 2,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 10, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "title": "Time to SLA Breach",
        "type": "stat",
        "gridPos": { "x": 16, "y": 24, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "((0.999 - (sum(rate(http_requests_total{service=\"api\",status!~\"5..\"}[30d])) / sum(rate(http_requests_total{service=\"api\"}[30d])))) / (sum(rate(http_requests_total{service=\"api\",status=~\"5..\"}[1h])) / sum(rate(http_requests_total{service=\"api\"}[1h])))) / 60",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "displayName": "Hours to Breach",
            "unit": "h",
            "decimals": 1,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 24, "color": "yellow" },
                { "value": 168, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "title": "Database Availability (SLA: 99.95%)",
        "type": "gauge",
        "gridPos": { "x": 0, "y": 28, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "(1 - (rate(pg_stat_database_conflicts_total{datname=\"noa_db\"}[30d]))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 99.5,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 99.5, "color": "red" },
                { "value": 99.9, "color": "yellow" },
                { "value": 99.95, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "title": "Data Durability SLO",
        "type": "gauge",
        "gridPos": { "x": 8, "y": 28, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "100 - (rate(backup_failures_total[30d]) * 100)",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 99.99,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 99.99, "color": "red" },
                { "value": 99.999, "color": "yellow" },
                { "value": 99.9999, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "title": "Recovery Time Objective (RTO)",
        "type": "stat",
        "gridPos": { "x": 16, "y": 28, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "avg_over_time(incident_recovery_time_seconds[30d]) / 60",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "displayName": "Avg Recovery Time",
            "unit": "m",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 15, "color": "yellow" },
                { "value": 30, "color": "red" }
              ]
            }
          }
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\",severity=\"critical\"}",
          "iconColor": "red",
          "name": "Critical Alerts",
          "step": "60s",
          "tagKeys": "alertname",
          "textFormat": "{{alertname}}",
          "titleFormat": "Critical Alert"
        },
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "deployment_info",
          "iconColor": "blue",
          "name": "Deployments",
          "step": "60s",
          "tagKeys": "version",
          "textFormat": "Deployed {{version}}",
          "titleFormat": "Deployment"
        }
      ]
    }
  }
}
