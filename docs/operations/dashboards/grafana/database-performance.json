{
  "dashboard": {
    "title": "Database Performance Dashboard",
    "tags": ["database", "postgresql", "performance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "title": "Database Connections",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"noa_db\"}",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "Max Connections",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Connections" },
          { "format": "short" }
        ],
        "alert": {
          "name": "High Database Connections",
          "conditions": [
            {
              "evaluator": { "params": [80], "type": "gt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "avg" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Database connections approaching limit",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "title": "Query Duration (P95)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(pg_stat_statements_total_time_seconds_bucket[5m])) by (le, query))",
            "legendFormat": "P95 {{query}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Query Duration" },
          { "format": "short" }
        ]
      },
      {
        "title": "Transactions Per Second",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit{datname=\"noa_db\"}[5m])",
            "legendFormat": "Commits",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_xact_rollback{datname=\"noa_db\"}[5m])",
            "legendFormat": "Rollbacks",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "ops", "label": "Transactions/sec" },
          { "format": "short" }
        ]
      },
      {
        "title": "Cache Hit Ratio",
        "type": "gauge",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(pg_stat_database_blks_hit{datname=\"noa_db\"}) / (sum(pg_stat_database_blks_hit{datname=\"noa_db\"}) + sum(pg_stat_database_blks_read{datname=\"noa_db\"})) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 90, "color": "yellow" },
                { "value": 95, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "title": "Top 10 Slowest Queries",
        "type": "table",
        "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "topk(10, avg_over_time(pg_stat_statements_mean_time_seconds[5m]))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": { "Time": true },
              "indexByName": {},
              "renameByName": {
                "query": "Query",
                "Value": "Avg Duration (s)"
              }
            }
          }
        ]
      },
      {
        "title": "Database Size",
        "type": "graph",
        "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=\"noa_db\"} / 1024 / 1024 / 1024",
            "legendFormat": "Database Size",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "gbytes", "label": "Size" },
          { "format": "short" }
        ]
      },
      {
        "title": "Deadlocks",
        "type": "graph",
        "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(pg_stat_database_deadlocks{datname=\"noa_db\"}[5m])",
            "legendFormat": "Deadlocks/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "ops", "label": "Deadlocks" },
          { "format": "short" }
        ],
        "alert": {
          "name": "Database Deadlocks",
          "conditions": [
            {
              "evaluator": { "params": [0.1], "type": "gt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "avg" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Database experiencing deadlocks",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "title": "Replication Lag",
        "type": "graph",
        "gridPos": { "x": 0, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "pg_replication_lag_seconds",
            "legendFormat": "{{replica}}",
            "refId": "A"
          }
        ],
        "yaxes": [{ "format": "s", "label": "Lag" }, { "format": "short" }],
        "alert": {
          "name": "High Replication Lag",
          "conditions": [
            {
              "evaluator": { "params": [10], "type": "gt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "avg" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Database replication lag is high",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "title": "Locks by Type",
        "type": "graph",
        "gridPos": { "x": 12, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(pg_locks_count) by (mode)",
            "legendFormat": "{{mode}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Lock Count" },
          { "format": "short" }
        ]
      }
    ]
  }
}
