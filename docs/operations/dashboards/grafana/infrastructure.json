{
  "dashboard": {
    "title": "Infrastructure Overview Dashboard",
    "tags": ["infrastructure", "kubernetes", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "title": "Cluster CPU Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total[5m])) by (node) * 100",
            "legendFormat": "{{node}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU Usage"},
          {"format": "short"}
        ],
        "alert": {
          "name": "High Node CPU",
          "conditions": [
            {
              "evaluator": {"params": [80], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Node CPU usage is above 80%",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "title": "Cluster Memory Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes) by (node) / sum(machine_memory_bytes) by (node) * 100",
            "legendFormat": "{{node}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Memory Usage"},
          {"format": "short"}
        ]
      },
      {
        "title": "Pod Status",
        "type": "stat",
        "gridPos": {"x": 0, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Running\"})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "displayName": "Running Pods",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "title": "Failed Pods",
        "type": "stat",
        "gridPos": {"x": 6, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Failed\"})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "displayName": "Failed Pods",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Pending Pods",
        "type": "stat",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Pending\"})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "displayName": "Pending Pods",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "CrashLoopBackOff",
        "type": "stat",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(kube_pod_container_status_waiting_reason{reason=\"CrashLoopBackOff\"})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "displayName": "CrashLoopBackOff Pods",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        },
        "alert": {
          "name": "CrashLoopBackOff Detected",
          "conditions": [
            {
              "evaluator": {"params": [1], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "last"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Pods in CrashLoopBackOff state detected",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "title": "Network I/O",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total[5m])) by (namespace) / 1024 / 1024",
            "legendFormat": "RX {{namespace}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total[5m])) by (namespace) / 1024 / 1024",
            "legendFormat": "TX {{namespace}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "MBs", "label": "Network I/O"},
          {"format": "short"}
        ]
      },
      {
        "title": "Disk I/O",
        "type": "graph",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(container_fs_reads_bytes_total[5m])) by (device) / 1024 / 1024",
            "legendFormat": "Read {{device}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(container_fs_writes_bytes_total[5m])) by (device) / 1024 / 1024",
            "legendFormat": "Write {{device}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "MBs", "label": "Disk I/O"},
          {"format": "short"}
        ]
      },
      {
        "title": "Persistent Volume Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "kubelet_volume_stats_used_bytes / kubelet_volume_stats_capacity_bytes * 100",
            "legendFormat": "{{persistentvolumeclaim}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Usage %"},
          {"format": "short"}
        ],
        "alert": {
          "name": "High PV Usage",
          "conditions": [
            {
              "evaluator": {"params": [85], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "5m",
          "handler": 1,
          "message": "Persistent volume usage is above 85%",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "title": "Node Status",
        "type": "table",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "kube_node_info",
            "format": "table",
            "refId": "A"
          },
          {
            "expr": "kube_node_status_condition{condition=\"Ready\",status=\"true\"}",
            "format": "table",
            "refId": "B"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "job": true},
              "indexByName": {},
              "renameByName": {
                "node": "Node",
                "kernel_version": "Kernel",
                "kubelet_version": "Kubelet",
                "status": "Status"
              }
            }
          }
        ]
      },
      {
        "title": "Container Restarts (Last Hour)",
        "type": "table",
        "gridPos": {"x": 0, "y": 28, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "topk(10, sum(increase(kube_pod_container_status_restarts_total[1h])) by (namespace, pod, container))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "namespace": "Namespace",
                "pod": "Pod",
                "container": "Container",
                "Value": "Restarts"
              }
            }
          }
        ]
      }
    ]
  }
}
