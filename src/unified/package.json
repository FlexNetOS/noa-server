{
  "name": "@noa-server/unified",
  "version": "1.0.0",
  "description": "Unified utilities and services for NOA Server - consolidated from duplicate implementations across packages",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "utilities",
    "redis",
    "logging",
    "circuit-breaker",
    "event-bus",
    "configuration",
    "noa-server"
  ],
  "author": "NOA Server Team",
  "license": "MIT",
  "dependencies": {
    "ioredis": "^5.3.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.10",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "ioredis": "^5.0.0",
    "winston": "^3.0.0",
    "zod": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/noa-server/noa-server.git",
    "directory": "src/unified"
  },
  "bugs": {
    "url": "https://github.com/noa-server/noa-server/issues"
  },
  "homepage": "https://github.com/noa-server/noa-server#readme"
}
