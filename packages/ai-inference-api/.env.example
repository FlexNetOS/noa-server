# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ORIGIN=*

# JWT Configuration (RS256 - Asymmetric)
JWT_ACCESS_SECRET=your-access-token-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-token-secret-min-32-chars
JWT_ALGORITHM=HS256
# For RS256, generate with: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=12

# Session Configuration
SESSION_SECRET=your-session-secret-min-32-chars
SESSION_MAX_AGE=86400000
SESSION_COOKIE_NAME=noa_session

# Redis (Optional - for distributed rate limiting)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS_ADMIN=1000
RATE_LIMIT_MAX_REQUESTS_USER=100
RATE_LIMIT_MAX_REQUESTS_GUEST=10

# Audit Logging
AUDIT_ENABLED=true
AUDIT_LOG_SUCCESSFUL_AUTH=true
AUDIT_LOG_FAILED_AUTH=true
AUDIT_MASK_PII=true

# Security
ENCRYPTION_KEY=your-encryption-key-min-32-chars
API_KEY_PREFIX=noa_

# AI Provider Configuration (from ai-provider package)
OPENAI_API_KEY=sk-example-key-replace-with-real
ANTHROPIC_API_KEY=sk-ant-example-key-replace-with-real

# Monitoring (Optional)
METRICS_ENABLED=false
LOG_LEVEL=info
