# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DB_PATH=./data/files.db

# Upload Configuration
UPLOAD_DIR=./uploads
THUMBNAIL_DIR=./thumbnails
TEMP_DIR=./temp

# File Size Limits (in bytes)
MAX_FILE_SIZE=104857600  # 100MB
MAX_CHUNK_SIZE=5242880   # 5MB

# Allowed MIME Types (comma-separated)
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in ms
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*

# Security
ENABLE_VIRUS_SCAN=false

# Vite Configuration
VITE_API_URL=http://localhost:3000
VITE_OPEN_BROWSER=false
VITE_SOURCEMAP=false

# PWA Configuration
VITE_PWA_ENABLED=true
VITE_PWA_OFFLINE_ENABLED=true

# Performance Monitoring
VITE_ENABLE_BUNDLE_ANALYZER=false
VITE_ENABLE_LIGHTHOUSE=false

# Build Optimization
VITE_DROP_CONSOLE=true
VITE_MINIFY_CSS=true
VITE_COMPRESS_ASSETS=true
