{
  "name": "@noa/hive-mind-king",
  "version": "1.0.0",
  "description": "Central orchestrator for the Hive-Mind system - manages swarms, agents, tools, and execution providers",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "hive-king": "./bin/hive-king.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "hive-mind",
    "swarm",
    "orchestrator",
    "agents",
    "mcp",
    "llama-cpp",
    "claude"
  ],
  "dependencies": {
    "@noa/ai-provider": "workspace:*",
    "@noa/mcp-client": "workspace:*",
    "@noa/agent-swarm": "workspace:*",
    "@noa/message-queue": "workspace:*",
    "@noa/monitoring": "workspace:*",
    "@noa/shared-utils": "workspace:*",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "winston": "^3.11.0",
    "sqlite3": "^5.1.7",
    "redis": "^4.6.0",
    "axios": "^1.6.0",
    "ws": "^8.16.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": ["dist", "bin"]
}
