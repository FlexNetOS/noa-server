{
  "name": "@noa/rate-limiter",
  "version": "1.0.0",
  "description": "Advanced distributed rate limiting with multiple algorithms for Noa Server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "benchmark": "node --loader ts-node/esm dist/benchmark.js"
  },
  "keywords": [
    "rate-limiting",
    "token-bucket",
    "sliding-window",
    "leaky-bucket",
    "distributed",
    "redis",
    "ddos-protection",
    "api-throttling"
  ],
  "author": "Noa Server Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "fastify": "^4.26.0",
    "graphql": "^16.8.1",
    "ioredis": "^5.3.2",
    "prom-client": "^15.1.0",
    "rate-limiter-flexible": "^5.0.0",
    "redis": "^4.6.12",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
