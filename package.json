{
  "name": "claude-suite",
  "version": "0.0.1",
  "private": true,
  "description": "Integrated Claude Suite monorepo with automation pipeline, MCP tooling, agents, llama.cpp, and UI.",
  "workspaces": ["packages/*", "servers/*", "apps/*"],
  "scripts": {
    "hive:init": "bash scripts/automation/hive-mind-init.sh",
    "hive:test": "bash scripts/tasks/hive-mind-test.sh",
    "swarm:init": "bash scripts/npm/run-task.sh swarm:init",
    "workspace:sync": "bash scripts/npm/run-task.sh workspace:sync",
    "runtime:bootstrap": "bash scripts/npm/run-task.sh runtime:bootstrap",
    "runtime:record": "bash scripts/npm/run-task.sh runtime:record",
    "config:scaffold": "bash scripts/npm/run-task.sh config:scaffold",
    "setup": "bash scripts/npm/run-task.sh setup",
    "memory:init": "bash scripts/npm/run-task.sh memory:init",
    "agents:sync": "bash scripts/npm/run-task.sh agents:sync",
    "mcp:verify": "bash scripts/npm/run-task.sh mcp:verify",
    "claude-flow:init": "bash scripts/npm/run-task.sh claude-flow:init",
    "flow-nexus:init": "bash scripts/npm/run-task.sh flow-nexus:init",
    "flow:integrate": "bash scripts/npm/run-task.sh flow:integrate",
    "neural:test": "bash scripts/npm/run-task.sh neural:test",
    "swarm:pair": "bash scripts/npm/run-task.sh swarm:pair",
    "swarm:train": "bash scripts/npm/run-task.sh swarm:train",
    "bench": "bash scripts/npm/run-task.sh bench",
    "ui:build": "bash scripts/npm/run-task.sh ui:build",
    "ui:start": "bash scripts/npm/run-task.sh ui:start",
    "verify": "bash scripts/npm/run-task.sh verify",
    "truth-gate": "bash scripts/npm/run-task.sh truth-gate",
    "export": "bash scripts/npm/run-task.sh export",
    "release:report": "bash scripts/npm/run-task.sh release:report",
    "lint": "eslint packages scripts src tests --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:fix": "eslint packages scripts src tests --ext .js,.jsx,.ts,.tsx --fix",
    "lint:report": "mkdir -p docs/reports && eslint packages scripts src tests --ext .js,.jsx,.ts,.tsx --format html --output-file docs/reports/eslint-report.html",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:staged": "prettier --write --ignore-unknown",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm audit --audit-level=high --json > ./docs/audits/npm-audit.json || true",
    "security:fix": "npm audit fix",
    "security:fix:force": "npm audit fix --force",
    "security:report": "npm audit --json > ./docs/audits/security-report-$(date +%Y%m%d).json",
    "license:check": "license-checker --json > ./docs/audits/license-report-$(date +%Y%m%d).json && license-checker --summary",
    "license:audit": "license-checker --failOn '(GPL|LGPL|MS-PL|BSD-4-Clause|BSD-3-Clause|BSD-2-Clause|MIT|ISC|Apache-2.0|BSD)' --summary",
    "quality:all": "pnpm run format && pnpm run lint:fix && pnpm run security:audit",
    "quality:check": "pnpm run format:check && pnpm run lint && pnpm run security:audit",
    "precommit": "pnpm run format:staged && pnpm run lint:fix",
    "prepush": "pnpm run quality:check",
    "generate:package": "node scripts/generators/generate.js package",
    "generate:mcp-server": "node scripts/generators/generate.js mcp-server",
    "generate:api-route": "node scripts/generators/generate.js api-route",
    "generate:component": "node scripts/generators/generate.js component",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --coverage tests/unit",
    "test:integration": "VITEST_DISABLE_THRESHOLDS=1 vitest run --coverage tests/integration",
    "test:e2e": "playwright test",
    "test:all": "pnpm run test:unit && pnpm run test:integration && pnpm run test:e2e",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "typecheck:watch": "tsc --noEmit --watch",
    "build:all": "pnpm -r run build",
    "perf:bench": "bash scripts/performance/run-benchmarks.sh all",
    "perf:bench:system": "bash scripts/performance/run-benchmarks.sh system",
    "perf:bench:api": "bash scripts/performance/run-benchmarks.sh api",
    "perf:bench:memory": "bash scripts/performance/run-benchmarks.sh memory",
    "perf:monitor": "ts-node scripts/performance/continuous-monitor.ts",
    "perf:monitor:quick": "MONITOR_DURATION=60 ts-node scripts/performance/continuous-monitor.ts",
    "perf:monitor:extended": "MONITOR_DURATION=300 ts-node scripts/performance/continuous-monitor.ts",
    "perf:baseline": "npm run perf:bench && cp docs/performance/benchmarks/benchmark-*.json docs/performance/benchmarks/baseline.json",
    "perf:compare": "npm run perf:bench",
    "perf:report": "echo 'Performance report: docs/performance-phase4-report.md'",
    "perf:profile:cpu": "node --cpu-prof --cpu-prof-dir=./docs/performance/profiles packages/*/src/server.ts",
    "perf:profile:heap": "node --inspect packages/*/src/server.ts",
    "perf:analyze:bundle": "echo 'Bundle analysis not yet configured'",
    "perf:analyze:queries": "echo 'Query analysis not yet configured'",
    "perf:status": "bash scripts/performance/quick-status.sh",
    "perf:optimize": "echo 'See docs/performance/optimization-ledger.json for optimization tasks'",
    "monitor:start": "bash scripts/monitoring/start-monitoring.sh all",
    "monitor:stop": "bash scripts/monitoring/stop-monitoring.sh",
    "monitor:status": "bash scripts/monitoring/status-monitoring.sh",
    "monitor:health": "node scripts/monitoring/health-check.js once",
    "monitor:metrics": "node scripts/monitoring/metrics-collector.js once",
    "monitor:dashboard": "node scripts/monitoring/dashboard.js",
    "monitor:test": "npm run test tests/monitoring/",
    "docs:hash:update": "bash scripts/ci/update-doc-hashes.sh",
    "verify:task-canonical": "bash scripts/ci/validate-task-canonical.sh"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.11.0",
  "dependencies": {
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "agentic-payments": "^0.1.7",
    "claude-flow": "^2.7.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-security": "^1.7.1",
    "flow-nexus": "^0.1.128",
    "license-checker": "^25.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.4.0",
    "ruv-swarm": "^1.0.20",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.26",
      "@types/react-dom": "^18.3.5"
    }
  }
}
